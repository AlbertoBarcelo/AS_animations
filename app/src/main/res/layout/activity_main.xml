<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="0dp">

    <!-- Título Superior -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textviewTopTitle"
        android:text="@string/app_logo_top"
        android:textColor="@color/logo_color"
        android:gravity="center"
        android:textSize="@dimen/logo_size"
        android:layout_marginBottom="16dp" />

    <!-- Imágenes en tabla -->
    <TableLayout
        android:id="@+id/tableLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <!-- Fila 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2Left"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/splash1" />

            <ImageView
                android:id="@+id/imageView2Right"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/splash2" />
        </TableRow>

        <!-- Fila 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3Left"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/splash3" />

            <ImageView
                android:id="@+id/imageView3Right"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/splash4" />
        </TableRow>
    </TableLayout>

    <!-- Título Inferior -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBottomTitle"
        android:text="@string/app_logo_bottom"
        android:textColor="@color/logo_color"
        android:gravity="center"
        android:textSize="@dimen/logo_size"
        android:layout_marginTop="16dp" />

    <!-- Información de versión -->
    <TextView
        android:id="@+id/textViewBottomVersion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/app_version_info"
        android:textSize="@dimen/version_size"
        android:textColor="@color/version_color"
        android:background="@color/version_bkgrd"
        android:gravity="center"
        android:padding="8dp" />
</LinearLayout>
